 {
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@openscd/open-scd-core": ["./packages/src"],
      "@openscd/open-scd-core/*": ["./packages/src/*"]
    }
  },
  "exclude": [
    "./**/test/**"
  ]
}

